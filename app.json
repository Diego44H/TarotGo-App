{
  "expo": {
    "name": "Tarot",
    "slug": "Tarot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tarot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      // --- ðŸ‘‡ AÃ‘ADE ESTO ---
      "associatedDomains": ["applinks:tarotgoapp.vercel.app"]
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.diego44h.tarotgo",
      "config": {
        "googleMaps": {
          "apiKey": "process.env.EXPO_PUBLIC_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA"
      ],
      // --- ðŸ‘‡ AÃ‘ADE ESTO ---
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https"
            },
            {
              "scheme": "https",
              "host": "tarotgoapp.vercel.app",
              "pathPrefix": "/card"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      // ... (El resto de tus plugins no cambia)
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationPermission": "Permitimos acceder a tu ubicaciÃ³n",
          "locationAlwaysAndWhenInUsePermission": "Permitimos acceder a tu ubicaciÃ³n aun en segundo plano"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir a $(PRODUCT_NAME) usar la cÃ¡mara."
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}